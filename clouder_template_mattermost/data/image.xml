<odoo>

    <record id="image_mattermost_data" model="clouder.image">
        <field name="name">image_mattermost_data</field>
        <field name="template_ids"
               eval="[(4, [ref('image_template_mattermost_data')])]"
               />
        <field name="parent_from">LasLabs/mattermost-data</field>
    </record>

    <record id="image_mattermost_exec" model="clouder.image">
        <field name="name">image_mattermost_exec</field>
        <field name="template_ids"
               eval="[(4, [ref('image_template_mattermost_exec')])]"
               />
        <field name="parent_from">LasLabs/mattermost-exec</field>
        <field name="volumes_from">data</field>
    </record>

</odoo>
